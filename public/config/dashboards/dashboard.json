{
  "dataSettings": {
    "dataURL": "/data/map.csv",
    "fileType": "csv"
  },
  "filters": [
    {
      "column": "Continent",
      "label": "Filter by continent",
      "excludeValues": ["N/A"]
    },
    {
      "column": "Income Group",
      "defaultValue": "",
      "label": "Filter by income group",
      "excludeValues": ["N/A"]
    }
  ],
  "dashboardLayout": {
    "rows": [
      {
        "columns": [
          {
            "graphType": "statCard",
            "dataFilters": [
              {
                "column": "HDI",
                "excludeValues": [null]
              }
            ],
            "columnWidth": 1,
            "graphDataConfiguration": [
              {
                "columnId": "Country Code",
                "chartConfigId": "value"
              }
            ],
            "settings": {
              "aggregationMethod": "count",
              "graphTitle": "Stat Card with Data Filter and Count",
              "backgroundColor": true,
              "padding": "1.25rem 1.25rem 0.25rem 1.25rem"
            }
          },
          {
            "graphType": "statCard",
            "columnWidth": 1,
            "dataTransform": { "keyColumn": "Continent" },
            "graphDataConfiguration": [
              {
                "columnId": "Continent",
                "chartConfigId": "value"
              }
            ],
            "settings": {
              "aggregationMethod": "count",
              "graphTitle": "Stat Card with Data Transformation and Count",
              "backgroundColor": true,
              "padding": "1.25rem"
            }
          }
        ]
      },
      {
        "height": 600,
        "columns": [
          {
            "graphType": "verticalBarChart",
            "columnWidth": 1,
            "dataTransform": {
              "keyColumn": "Continent",
              "aggregationColumnsSetting": [
                {
                  "column": "HDI",
                  "aggregationMethod": "average"
                }
              ]
            },
            "graphDataConfiguration": [
              {
                "columnId": "Continent",
                "chartConfigId": "label"
              },
              {
                "columnId": "HDI",
                "chartConfigId": "size"
              }
            ],
            "settings": {
              "backgroundColor": true,
              "leftMargin": 64,
              "rightMargin": 64,
              "maxBarThickness": 200,
              "topMargin": 32,
              "tooltip": "{{data.data.staff_category}} <strong>{{data.data.count}}</strong>",
              "padding": "1.25rem",
              "graphTitle": "Vertical Bar Chart with Data Transformation"
            }
          },
          {
            "graphType": "choroplethMap",
            "columnWidth": 2,
            "graphDataConfiguration": [
              {
                "columnId": "HDI",
                "chartConfigId": "x"
              },
              {
                "columnId": "Country Code",
                "chartConfigId": "countryCode"
              }
            ],
            "settings": {
              "backgroundColor": true,
              "tooltip": "{{data.data.country_name}} <strong>{{data.data.count}}</strong>",
              "padding": "1.25rem",
              "mapProperty": "ISO3",
              "domain": [0.4, 0.55, 0.8, 1],
              "showColorScale": true,
              "scale": 240,
              "centerPoint": [20, 20],
              "graphTitle": "Simple Choropleth Map",
              "colorLegendTitle": "Legend Title"
            }
          }
        ]
      }
    ]
  }
}
